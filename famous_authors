CREATE TABLE famous_authors (
    id INTEGER PRIMARY KEY,
    name TEXT,
    birth_year INTEGER,
    birth_place TEXT
    );
    
CREATE TABLE books (
    author_name TEXT,
    title TEXT,
    book_number INTEGER,
    release_year INTEGER
    );
    
CREATE TABLE education (
    name TEXT,
    alma_mater TEXT,
    grad_year INTEGER
    );

